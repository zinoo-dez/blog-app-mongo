<%= error ?? "" %>
<form action="/auth/register" method="POST" class="w-50 m-auto p-5 mt-5 shadow">
  <h3>Register</h3>
  <input
    type="name"
    name="name"
    placeholder="name"
    required
    class="form-control mb-1"
  />
  <br />
  <input
    type="email"
    name="email"
    placeholder="Email"
    required
    class="form-control mb-1"
  />
  <br />
  <input
    type="password"
    name="password"
    placeholder="Password"
    required
    class="form-control mb-1"
  />
  <br />
  <button type="submit" class="btn btn-primary">Register</button>
  <a href="/auth/login" class="btn btn-info"> Login</a>
</form>
