<form action="/posts/edit/<%= post.id %>" method="POST" class="w-75 m-auto p-4 shadow mt-3">
  <h3>Edit Post</h3>
  <input type="text" name="title" value="<%= post.title %>" required class="form-control mb-3">
  <textarea name="content" required class="form-control mb-3"><%= post.content %></textarea>
  <button type="submit" class="btn btn-primary">Update Post</button>
</form>