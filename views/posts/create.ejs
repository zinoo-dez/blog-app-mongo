<form action="/posts/create" method="POST" class="w-75 m-auto p-4 shadow mt-3">
  <h1>New Post</h1>
  <input type="text" name="title" placeholder="Title" required class="form-control mb-3">
  <textarea name="content" placeholder="Content" required class="form-control mb-3"></textarea>
  <button type="submit" class="btn btn-primary">Create Post</button>
</form>